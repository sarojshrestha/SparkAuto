@page
@model SparkAuto.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="border background-white">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Service Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="Create" class="btn btn-info">+ Create</a>
        </div>
        <br />
        @if (Model.ServiceTypes.Count == 0)
        {
            <p>No Servie Type exits. Please create a new servie type.</p>
        }
        else
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>@Html.DisplayNameFor(m=>m.ServiceTypes[0].Name)</th>
                    <th>@Html.DisplayNameFor(m=>m.ServiceTypes[1].Price)</th>
                    <th></th>
                </tr>
                @foreach (var item in Model.ServiceTypes)
                {
                    <tr><td>
                        @Html.DisplayFor(m=>item.Name)
                        </td>
                <td>@Html.DisplayFor(m=>item.Price)</td>
                <td style="width:150px;">
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary text-white" asp-page="Edit" asp-route-Id="@item.Id">Edit</a>
                        <a class="btn btn-success text-white" asp-page="Details" asp-route-Id="@item.Id">Details</a>
                        <a class="btn btn-danger text-white" asp-page="Delete" asp-route-Id="@item.Id">Delete</a>
                    </div>
                </td>
                </tr>
                }
            </table>
        }
    </div>
</div>
